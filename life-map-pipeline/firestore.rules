rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
        request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /lifeMaps/{mapId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /lifeMapChapters/{chapterId} {
      allow read: if isAdmin(); // Or more granular, based on map ownership
      allow write: if isAdmin();
    }

    match /lifeMapEvents/{eventId} {
      // Hot path - often more open for writes, stricter on reads.
      allow read: if isAdmin();
      allow create: if request.auth != null; // Allow any authenticated user to write their own events
      allow update, delete: if isAdmin();
    }

    match /lifeMapJobs/{jobId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}

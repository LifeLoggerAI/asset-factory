rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null &&
        request.auth.token.admin == true;
    }

    // Raw event data, which may include user-uploaded files (photos, videos),
    // can only be created and read by the user who owns the data.
    match /rawEvents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Processed Life-Map artifacts are immutable and can only be written by the
    // backend pipeline and read by the owning user.
    match /lifeMaps/{lifeMapId}/{allPaths=**} {
      allow read: if request.auth != null && resource.metadata.owner == request.auth.uid;
      allow write: if isAdmin();
      allow delete: if false;
    }
  }
}
